<mvc:View
    controllerName="eltegrafmodellezo.app.controller.Home"
    xmlns:mvc="sap.ui.core.mvc"
    xmlns:core="sap.ui.core"
    displayBlock="true"
    xmlns="sap.m"
    xmlns:app="http://schemas.sap.com/sapui5/extension/sap.ui.core.CustomData/1">
	<Page showHeader="false" showFooter="false" showSubHeader="false">
    <HBox width="100%" height="100%" 
    		justifyContent="Center" alignItems="Center">
        <items>
            <GenericTile class="sapUiMediumMarginEnd" 
            	header="{i18n>StaticMode}" subheader="" 
            	press="onPressTile" app:targetRoute="StaticHome">
                <TileContent unit="" footer="">
                    <ImageContent src="sap-icon://disconnected"/>
                </TileContent>
            </GenericTile>
            <GenericTile class="sapUiMediumMarginEnd" 
            	header="{i18n>NormalMode}" subheader="" 
            	press="onPressTile" app:targetRoute="DynamicHome">
            	<TileContent unit="" footer="">
                    <ImageContent src="sap-icon://connected"/>
                </TileContent>
            </GenericTile>
        </items>
    </HBox>
    </Page>
</mvc:View>
